---
import { modulesPageContent } from '../../config';
import ProjectCard from '../../components/ProjectCard.astro';

// Extract the specific module data for "Machine Learning" from modulesPageContent
const machineLearningModule = modulesPageContent.modules.find(module => module.title === "Machine Learning");

if (!machineLearningModule) {
  throw new Error("Machine Learning module data is missing. Please check your config.ts.");
}
---




<!-- Page SEO Metadata -->
<head>
  <title>{machineLearningModule.title} | {modulesPageContent.seo.title}</title>
  <meta name="description" content={machineLearningModule.description} />
</head>

<!-- Page Header -->
<section class="module-header">
  <h1>{machineLearningModule.title}</h1>
  <p>{machineLearningModule.description}</p>
  <img src={machineLearningModule.image} alt={machineLearningModule.title} />
</section>

<!-- Projects Section -->
<section class="projects-section">
  <h2>Projects in {machineLearningModule.title}</h2>
  <div class="projects-grid">
    {machineLearningModule.projects.map(project => (
      <ProjectCard
        title={project.title}
        description={project.description}
        image={project.image}
        url={project.url}
        year={project.year}
      />
    ))}
  </div>
</section>

<style>
  .module-header {
    text-align: center;
    padding: 2rem;
  }
  .module-header img {
    max-width: 100%;
    height: auto;
    margin-top: 1rem;
  }
  .projects-section {
    padding: 2rem;
  }
  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 1rem;
  }
</style>
